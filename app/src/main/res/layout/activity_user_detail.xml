<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.UserDetailActivity"
    android:layout_marginHorizontal="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="@dimen/layout_padding"
        android:showDividers="middle"
        android:divider="@drawable/divider_view_padding">

        <ImageView
            android:id="@+id/detail_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/detail_name"
            style="?attr/textAppearanceHeadline6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="Account Name"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="18dp"
            android:layout_marginTop="@dimen/subview_padding"/>

        <TextView
            android:id="@+id/detail_username"
            style="?attr/textAppearanceSubtitle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="1.5dp"
            android:maxLines="1"
            android:text="Account username"
            android:gravity="center"/>

        <TextView
            android:id="@+id/detail_company"
            style="?attr/textAppearanceBody1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_company"
            android:drawablePadding="@dimen/subview_padding"
            android:gravity="center"
            android:paddingVertical="4dp"
            android:paddingRight="@dimen/subview_padding"
            android:text="Company"
            android:layout_marginTop="@dimen/view_padding"
            android:maxLines="2"/>

        <TextView
            android:id="@+id/detail_location"
            style="?attr/textAppearanceBody1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_location"
            android:drawablePadding="@dimen/subview_padding"
            android:gravity="center"
            android:paddingVertical="4dp"
            android:paddingRight="@dimen/subview_padding"
            android:text="Location"
            android:maxLines="2"/>

        <TextView
            android:id="@+id/detail_repositories"
            style="?attr/textAppearanceBody1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_repository"
            android:drawablePadding="@dimen/subview_padding"
            android:gravity="center"
            android:paddingVertical="4dp"
            android:paddingRight="@dimen/subview_padding"
            android:text="Repositories"
            android:maxLines="1"/>

        <LinearLayout
            android:id="@+id/detail_follows"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/detail_followers"
                style="?attr/textAppearanceBody1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_person"
                android:drawablePadding="@dimen/subview_padding"
                android:gravity="center"
                android:paddingVertical="4dp"
                android:paddingRight="@dimen/subview_padding"
                android:text="Followers"
                android:maxLines="1"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingHorizontal="@dimen/subview_padding"
                android:src="@drawable/ic_circle" />

            <TextView
                android:id="@+id/detail_following"
                style="?attr/textAppearanceBody1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center"
                android:paddingHorizontal="@dimen/subview_padding"
                android:paddingVertical="4dp"
                android:text="Following"
                android:maxLines="1"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_detail_github"
            style="?attr/buttonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_padding"
            android:text="Open GitHub User" />
    </LinearLayout>
</ScrollView>