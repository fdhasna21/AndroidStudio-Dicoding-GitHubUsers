<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="12dp"
    android:paddingHorizontal="@dimen/layout_padding"
    android:background="?attr/selectableItemBackground"
    android:id="@+id/row_repository"
    android:divider="@drawable/divider_view_padding"
    android:showDividers="middle"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/row_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="12dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_launcher"
            android:contentDescription="@string/account_profile_picture" />

        <TextView
            android:id="@+id/row_username"
            style="?attr/textAppearanceSubtitle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="14sp"
            android:text="@string/account_username"/>
    </LinearLayout>

    <TextView
        android:id="@+id/row_repoName"
        style="?attr/textAppearanceHeadline5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="@string/repository_name"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/row_repoDesc"
        style="?attr/textAppearanceSubtitle1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:textSize="14sp"
        android:text="@string/repository_description"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/row_repoStar"
            style="?attr/textAppearanceSubtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="14sp"
            android:text="@string/starred"
            android:drawablePadding="@dimen/subview_padding"
            android:gravity="center"
            android:paddingEnd="@dimen/subview_padding"
            app:drawableTint="@color/yellow"
            app:drawableLeftCompat="@drawable/ic_star" />

        <TextView
            android:id="@+id/row_repoLanguage"
            style="?attr/textAppearanceSubtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="14sp"
            android:text="@string/language"
            android:drawablePadding="@dimen/subview_padding"
            android:gravity="center"
            android:paddingEnd="@dimen/subview_padding"
            android:paddingStart="@dimen/subview_padding"
            app:drawableLeftCompat="@drawable/ic_circle" />
    </LinearLayout>
</LinearLayout>